import sqlite3

Connection = sqlite3.connect('VkBot.db')
cursor = Connection.cursor()
for row in cursor.execute(f'''SELECT sec.name,
                                     prod.name
                              FROM product prod,
                                   section sec
                              WHERE sec.ID_section = prod.ID_section'''):
    print(row)

ListWithSection = []
for row in cursor.execute(f'''SELECT sec.name             
                              FROM   section sec
                              '''):
    ListWithSection.append(row[0])

print(ListWithSection)


Connection.close()

